<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/step2Image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/step2_img"/>

    <ImageView
        android:id="@+id/stepIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/step2_icon"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_below="@+id/step2Image"/>

    <ImageView
        android:id="@+id/step2Content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/step2_content"
        android:layout_below="@id/stepIcon"/>

    <ImageView
        android:id="@+id/swipeIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/swipeicon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>